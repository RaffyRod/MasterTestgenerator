{
  "name": "master-test-generator",
  "version": "1.0.0",
  "description": "Application to generate test plans and test cases in English and Spanish",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:local-ai": "node scripts/dev-local-ai.js",
    "dev:web-ai": "node scripts/dev-web-ai.js",
    "dev:direct": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,vue,json,css,scss,md}\"",
    "prepare": "husky install",
    "install-ollama": "node scripts/install-ollama.js",
    "setup": "node scripts/setup.js"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "vue-i18n": "^9.9.1",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "vite": "^5.1.6",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
